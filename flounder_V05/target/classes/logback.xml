<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="STDOUT"
		class="ch.qos.logback.core.ConsoleAppender">
		<!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder 
			by default -->
		<encoder>
			<pattern>%d{yy-MM-dd HH:mm:ss} [%logger{0}]- %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="FILE"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>
		
			<!--
				C:/TeamGit/Bamen_Sub/bamentum_03/logs/bamentum.log 
				D:/Git/WebProject/bamentum_03/logs/bamentum.log
				D:/Git/SpringStudy/BamentumRE_01/logs/bamentum.log 
				C:\TeamGit\flounder_01\flounder_01
			-->
				C:/TeamGit/flounder_01/flounder_01/logs/flounder.log 
			
		</file>
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- daily rollover. Make sure the path matches the one in the file element 
				or else the rollover logs are placed in the working directory. -->
			<fileNamePattern>
				<!-- 
					C:/TeamGit/Bamen_Sub/bamentum_02/logs/bamentum_%d{yyyy-MM-dd}.%i.log
					D:/Git/WebProject/bamentum_02/logs/bamentum_%d{yyyy-MM-dd}.%i.log
					D:/Git/SpringStudy/BamentumRE_01/logs/bamentum_%d{yyyy-MM-dd}.%i.log
				 -->
					C:/TeamGit/flounder_01/flounder_01/logs/flounder_%d{yyyy-MM-dd}.%i.log 
				
			</fileNamePattern>

			<timeBasedFileNamingAndTriggeringPolicy
				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>5MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<!-- keep 30 days' worth of history -->
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<charset>UTF-8</charset>
			<pattern>%d{yy-MM-dd HH:mm:ss} [%logger{0}]- %msg%n</pattern>
		</encoder>
	</appender>

	<root level="debug">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE" />
	</root>
</configuration>